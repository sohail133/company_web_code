<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Sr.</th>
      <th>Name</th>
      <th>Designation</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% reviews.each_with_index do |review, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%=review.name%></td>
        <td><%=review.designation%></td>
        <td>
          <% if review.status == 'inactive' %>
            <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="customSwitches ">
            <label class="custom-control-label" for="customSwitches"></label>
            </div>
          <%elsif review.status == 'active' %>
            <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="customSwitches " checked>
            <label class="custom-control-label" for="customSwitches"></label>
            </div>
          <%end%>                      
        </td>                
        <td>
          <%= link_to admin_client_review_path(review), title:"View", class:'btn btn-success' do %>
            <i class="fas fa-eye"></i>
          <%end%>                     
          <%= link_to edit_admin_client_review_path(review), title:"Edit", class:'btn btn-secondary' do %>
            <i class="fas fa-edit"></i>
          <%end%>
          <%= link_to admin_client_review_path(review), title:"Delete", method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' do %>
            <i class="fa fa-trash"></i>
          <%end%>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<div class="dataTables_paginate paging_simple_numbers float-right" id="dataTable_paginate">
  <%= will_paginate reviews, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>