<table class="services-data-table table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Sr.</th>
      <th>Title</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% services.each_with_index do |service, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%=service.title%></td>
        <td>
          <% if service.status == 'inactive' %>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitches ">
              <label class="custom-control-label" for="customSwitches"></label>
            </div>
          <%elsif service.status == 'active' %>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitches " checked>
              <label class="custom-control-label" for="customSwitches"></label>
            </div>
          <%end%>
        </td>
        <td>                    
          <%= link_to admin_service_path(service), title:"View", class:'btn btn-success' do %>
            <i class="fas fa-eye"></i>
          <%end%>                     
          <%= link_to edit_admin_service_path(service), title:"Edit", class:'btn btn-secondary' do %>
            <i class="fas fa-edit"></i>
          <%end%>
          <%= link_to admin_service_path(service), title:"Delete", method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' do %>
            <i class="fa fa-trash"></i>
          <%end%>
          <%= link_to service_path(service), title:"View in Website", target:'_blank', class:'btn btn-success' do %>
            <i class="fas fa-globe"></i>
          <%end%>                      
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<div class="dataTables_paginate paging_simple_numbers float-right" id="dataTable_paginate">
  <%= will_paginate services, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

