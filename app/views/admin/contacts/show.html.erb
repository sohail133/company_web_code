<div class="container">
  <div class="card mb-3">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h4 class="m-0 font-weight-bold text-mute"><i class="fa fa-address-card"></i> Contact</h4>
      <p class="m-0 text-mute font-weight-bold">
          <i class="fa fa-clock"></i> <%= time_ago_in_words(@contact.created_at) %> ago
      </p>
      <p class="card-text">
        <% status = @contact.status %>
        <%= content_tag :i, '', class: "fas fa-#{status == 'accepted' ? 'check-circle text-success' : status == 'pending' ? 'question-circle text-primary' : 'times-circle text-danger'}" %>
        <span class="font-weight-bold <%= status == 'rejected' ? 'text-danger' : status == 'accepted' ? 'text-success' : 'text-primary' %>">
          <%= status.titleize %>
        </span>
      </p>     
    </div>
    <div class="row g-0">
      <div class="col-md-2">
        <div class="card-body">
        </div>
      </div>
      <div class="col-md-4">
        <div class="card-body">
          <h5 class="card-title text-dark"><i class="fa fa-user"></i> Name</h5>
          <p class="card-text"><%= @contact.name %></p>          
          <h5 class="card-title text-dark"><i class="fa fa-envelope"></i> Email</h5>
          <p class="card-text"><%= mail_to @contact.email %></p>                            
        </div>
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title text-dark"><i class="fa fa-comment-dots"></i> Subject</h5>
          <p class="card-text"><%= @contact.subject %></p>          
          <h5 class="card-title text-dark"><i class="fa fa-comment-alt"></i> Message</h5>
          <p class="card-text"><%= @contact.message %></p>
        </div>
      </div>           
    </div>
    <div class="card-header py-3">
      <a href="<%= admin_contacts_path %>" class="btn btn-dark btn-icon-split">
        <span class="icon text-white"><i class="fas fa-arrow-left"></i></span>
        <span class="text">Back</span>
      </a>
    </div>
  </div>
</div>