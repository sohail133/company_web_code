<div class="text-center">
  <h1 class="h4 font-weight-bold text-gray-900 mb-4">
    <i class="fa fa-cog"></i> Setting</h1>
</div>
<%= form_with(model: [ :admin, setting ], local: true) do |form| %>
  <% if setting.errors.any? %>
    <div  class="alert alert-danger alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <p><i class="fa fa-exclamation"></i> <%= pluralize(setting.errors.count, "error") %>: Unable to save changes.</p>
      <ul>
        <% setting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.text_field :location, class:'form-control form-control-user', required: true, placeholder: 'Enter Location...' %>
  </div>
  <div class="form-group">
    <%= form.email_field :email, class:'form-control form-control-user', required: true, placeholder:'Add Email' %>
  </div>
  <div class="form-group">
    <%= form.text_field :phone_number, class:'form-control form-control-user', required: true, placeholder:'Add Phone Number' %>
  </div>
  <div class="form-group">
    <%= form.text_area :copyright, class:'tinymce form-control form-control-user', placeholder:'Add Copyright here' %>
  </div>
  <div class="form-group">
    <%= form.text_field 'social_urls[facebook_url]', value: @setting.social_urls['facebook_url'], class:'form-control form-control-user', placeholder:'Add Facebook URL here' %>
  </div>
  <div class="form-group">
    <%= form.text_field 'social_urls[twitter_url]', value: @setting.social_urls['twitter_url'], class:'form-control form-control-user', placeholder:'Add Twitter URL here' %>
  </div>
  <div class="form-group">
    <%= form.text_field 'social_urls[instagram_url]', value: @setting.social_urls['instagram_url'], class:'form-control form-control-user', placeholder:'Add Instgram URL here' %>
  </div>        
  <div class="form-group">
    <%= form.text_field 'social_urls[linkedin_url]', value: @setting.social_urls['linkedin_url'], class:'form-control form-control-user', placeholder:'Add Linkedin URL here' %>
  </div>        
  <div class="form-group">
    <%= form.text_field 'social_urls[skype_url]', value: @setting.social_urls['skype_url'], class:'form-control form-control-user', placeholder:'Add Skype URL here'%>
  </div>
  <div class="form-group">
    <%= form.select :status, Setting.statuses.keys.to_a.map {|status| [status.humanize, status]},{include_blank: 'Select Status'}, class:'form-control form-control-user', required: true %>
  </div> 
  <div class="button-group py-2 d-flex justify-content-between align-items-center">
    <a href="<%= admin_settings_path %>" class="btn btn-dark btn-icon-split">
        <span class="icon text-white"><i class="fas fa-arrow-left"></i></span>
        <span class="text">Back</span>
    </a>
    <%= form.submit class: 'btn btn-dark' %>
  </div>
<%end%>