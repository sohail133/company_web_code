<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Sr.</th>
      <th>Location</th>
      <th>Email</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% settings.each_with_index do |setting, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%=setting.location%></td>
        <td><%=setting.email%></td>
        <td>
          <% if setting.status == 'inactive' %>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitches ">
              <label class="custom-control-label" for="customSwitches"></label>
            </div>
          <%elsif setting.status == 'active' %>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitches " checked>
              <label class="custom-control-label" for="customSwitches"></label>
            </div>
          <%end%>
        </td>
        <td>
          <%= link_to admin_setting_path(setting), title:"View", class:'btn btn-success' do %>
              <i class="fas fa-eye"></i>
          <%end%>                 
          <%= link_to edit_admin_setting_path(setting), title:"Edit", class:'btn btn-secondary' do %>
            <i class="fas fa-edit"></i>
          <%end%>
          <%= link_to admin_setting_path(setting), title:"Delete", method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' do %>
            <i class="fa fa-trash"></i>
          <%end%>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<div class="dataTables_paginate paging_simple_numbers float-right" id="dataTable_paginate">
  <%= will_paginate settings, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>   