<div class="profile">
  <div class="form-container">
    <h1 class="title">Update Profile</h1>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <p class="text-danger"><%= pluralize(@user.errors.count, "error") %> prohibited this from being saved:</p>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li class="text-danger"><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="input-group">
          <label for="username">Email</label>
          <%= f.email_field :email, class:'input', autofocus: true, autocomplete: "email", placeholder: 'Email Address...' %>
      </div>
      <div class="input-group">
          <label for="name">First Name</label>
          <%= f.text_field :first_name, class:'input', autofocus: true, autocomplete: "name", placeholder: 'First Name' %>
      </div>
      <div class="input-group">
          <label for="name">Last Name</label>
          <%= f.text_field :last_name, class:'input', autofocus: true, autocomplete: "name", placeholder: 'Last Name' %>
      </div>            
      <div class="input-group">
        <label for="password">New Password <i>(leave blank if you don't want to change it)</i></label>
        <%= f.password_field :password, class:'input', autocomplete: "new-password", placeholder:'New Password' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>            
      </div>
      <div class="input-group">
        <label for="password">Confirm Password</label>              
        <%= f.password_field :password_confirmation, class:'input', autocomplete: "new-password", placeholder:'Confirm Password' %>
      </div>                        
      <div class="input-group">
          <label for="password">Current Password</label>
          <%= f.password_field :current_password, class:'input', autocomplete: "current-password", placeholder:'Current Password' %>		
      </div>
      <%= f.submit class:'sign mt-3' %>
    <%end%>
    <div class="social-message">
      <div class="line"></div>
      <p class="message">Actions</p>
      <div class="line"></div>
    </div>
    <div class="social-icons d-flex gap-3">
      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:'sign'  %>
      <%= link_to "Back", admin_dashboards_path, class:'sign' %>
    </div>
  </div>
</div>
<%= render 'admin/shared/footer'%>
